{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build:prod:ssr",
    "source": "."
  },
  "hosting": {
    "public": "dist/hub-movies/browser",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": ["!dist", "*", "**/**"],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0, no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31557600"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=604800"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  }
}
